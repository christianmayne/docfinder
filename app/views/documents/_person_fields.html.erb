<div class="span-23 fields">
  <span class="span-4">Title <%= f.text_field :name_title %></span>
  <span class="span-4">First name <%= f.text_field :name_first %></span>
  <span class="span-4">Middle name <%= f.text_field :name_middle %></span>
  <span class="span-4">Surname <%= f.text_field :name_last %></span>
  <span class="span-3 short-select">Sex <%= f.select :sex, people_gender, :prompt => true %></span>
  <span class="span-3 link-remove-25"><%= link_to_remove_fields "remove person", f %></span>

  <div class="clear-both"></div>
  <div style="font-weight: bold;margin-top: 20px">Add life events</div>
  <div class="span-22 attribute-stockitem">
    <% f.fields_for :person_events do |person_event_attr| %>
      <%= render :partial => "person_event_fields", :locals => {:f => person_event_attr} %>
    <% end %>
    <span class="span-3 top-25"><%= link_to_add_fields "+ add another event", f, :person_events %></span>
  </div>
</div>
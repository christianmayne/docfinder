<%= flash[:notice] unless flash[:notice].blank? %>
<div class="span-5" style="border: 1px solid black;margin-left: 10px">
  <h1>Logo</h1>
</div>
<% if current_user.blank? %>
  <div class="span-7" style="float: right">
    <% form_for :user_session, :url => {:controller => "user_sessions", :action => "create"} do |f| %>
      <div class="span-3">
        Username<br/>
        <%= f.text_field :login, :size => 10 %>
      </div>
      <div class="span-3">
        Password<br/>
        <%= f.password_field :password, :size => 10 %><br />
      </div>
      <%= f.submit 'Submit' %><br />
      <%= link_to "Register", register_path %>
    <% end %>
  </div>
<% else %>
  <div class="span-7" style="float: right">
    You logged in as <%= current_user.login %>
    <%= link_to("logged out!", logout_path) %>
  </div>
<% end %>

